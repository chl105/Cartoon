<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.sltpaya.cartoon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.sltpaya.tool.Utils$ToolApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup,android:supportsRtl,android:label,android:icon">
        <activity android:name=".activity.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.StripManDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.BookNewDetailsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.CartoonRankActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.BookMoreActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.ClassifyActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.NovelRankActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.NovelDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.RednecksRankActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>