<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/author_head_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_cover_home02"
            app:riv_border_color="#e0dede"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="5dp"
            app:riv_oval="false" />

        <ImageView
            android:id="@+id/cartoon_flag"
            android:src="@drawable/bg_xuanyi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="1"
            android:textColor="#fad920" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:text="大家好啊啊啊"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/cartoon_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#686868"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/cartoon_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="孙李"
                android:textColor="#a6aeb4"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>