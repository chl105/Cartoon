<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="295dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/item_bar_type"
            android:textSize="13sp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="魔幻"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_bar_title"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="我是大大的标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_bar_author"
            android:textColor="#999999"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="10dp"
            android:text="沈木华"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_bar_img"
        android:scaleType="fitXY"
        android:src="@drawable/icon_cover_home03"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_bar_update"
            android:text="我是标题包比爱彼岸"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_bar_comment"
            android:textColor="#999999"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/chapter_comment_icom"
            android:drawableLeft="@drawable/chapter_comment_icom"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>