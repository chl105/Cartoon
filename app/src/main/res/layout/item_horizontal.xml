<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_horizontal_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_cover_home01"
            app:riv_border_color="#e0dede"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="5dp"
            app:riv_oval="false" />

        <ImageView
            android:id="@+id/item_horizontal_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

    </FrameLayout>

    <TextView
        android:id="@+id/item_horizontal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:textColor="@color/title_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_horizontal_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/author_text_color"
        android:textSize="@dimen/smaller_text_size" />

</LinearLayout>