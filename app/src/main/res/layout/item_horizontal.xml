<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="168dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <FrameLayout
        android:layout_width="168dp"
        android:layout_height="104dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="2dp"
            app:riv_oval="false"
            app:riv_border_width="2px"
            app:riv_border_color="#877ee0"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_horizontal_img"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_cover_home01" />

        <ImageView
            android:id="@+id/item_horizontal_flag"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <TextView
        android:id="@+id/item_horizontal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="霸道总裁爱上我"
        android:textColor="#434343"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_horizontal_author"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="倔强独立的财阀独生女和门风突发之间"
        android:textColor="#b1b1b1"
        android:textSize="11sp" />


</LinearLayout>