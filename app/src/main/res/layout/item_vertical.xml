<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="152dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            app:riv_oval="false"
            app:riv_border_width="2px"
            app:riv_border_color="#877ee0"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_vertical_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/icon_cover_home02" />

        <ImageView
            android:id="@+id/item_vertical_flag"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <TextView
        android:id="@+id/item_vertical_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#434343"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_vertical_author"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#b1b1b1"
        android:textSize="12sp" />


</LinearLayout>