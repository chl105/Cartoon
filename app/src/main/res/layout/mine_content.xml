<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mine_work"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/my_work_icon"
            android:gravity="center"
            android:text="作品" />

        <TextView
            android:id="@+id/mine_recommend"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/my_fans_icon"
            android:gravity="center"
            android:text="推荐" />

        <TextView
            android:id="@+id/mine_follow"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/my_attention_icon"
            android:gravity="center"
            android:text="关注" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bottom_shadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcebc4">

        <TextView
            android:id="@+id/mine_unlogin_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="登录后，虫娘才能更好的服务您~ ~O(∩_∩)O~"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_unlogin_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/mine_login"
                style="?attr/borderlessButtonStyle"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mine_login"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Space
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/mine_register"
                style="?attr/borderlessButtonStyle"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mine_register"
                android:text="注册"
                android:textColor="#ff7453"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>