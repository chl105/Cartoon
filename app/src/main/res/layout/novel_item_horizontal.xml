<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="104dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="2dp"
            app:riv_oval="false"
            app:riv_border_width="2px"
            app:riv_border_color="#877ee0"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"
            android:id="@+id/novel_item_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/icon_cover_home01" />

        <ImageView
            android:id="@+id/novel_item_flag"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <TextView
        android:id="@+id/novel_item_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#434343"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/novel_item_des"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp" />

</LinearLayout>