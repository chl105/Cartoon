<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="12dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_oval="false"
        app:riv_border_width="2px"
        app:riv_border_color="#877ee0"
        app:riv_corner_radius="5dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/novel_item_img"
        android:src="@drawable/icon_cover_home01"
        android:layout_width="112dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/novel_item_title"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="我是标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/novel_item_count"
                android:textColor="#fead97"
                android:textSize="12sp"
                android:text="1111人气"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/novel_item_flag"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:text="标签"
            android:textColor="#fe5b2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/novel_item_des"
            android:textColor="#b3b0b1"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:text="描述啊啊啊 啊"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>